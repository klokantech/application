<!DOCTYPE html>
<html>
    <head>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag 'iframe' %>
        <%= javascript_include_tag 'iframe' %>
        <link href="https://fonts.googleapis.com/css?family=Zilla+Slab:400,600,700|Muli:400,600,700" rel="stylesheet">
    </head>
    <body class="iframe-view">
        <%= render partial: "shared/flash" %>
        <%= yield %>
        <script type="text/javascript" charset="utf-8">
            $(function() {
              // make sure we're in an iframe
              if (window.self === window.top) {
                window.location = '<%= content_for?(:equivalent_url_in_iframe) ? yield(:equivalent_url_in_iframe) : '/map/account/account' %>'
              }
            })
        </script>
    </body>
</html>
